<div id="pageHeader">
  <div id="logo" class="lfloat">
    <%= link_to logo, root_path %>
  </div>
  <div id="headerInfo" class="rfloat">
    <% if signed_in? %>
      <span id="username" class="<%= 'admin' if is_admin? %>">
        <%= current_user.name %>
      </span>
      <%= link_to "[登出]", signout_path %>
    <% else %>
      <%= link_to "[登录]", signin_path %>
    <% end %>

  </div>
  <hr> 
</div>

