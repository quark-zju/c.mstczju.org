<tr>
  <td><%= link_to contest.name, contest %></td>
  <td><%= contest.start_time %></td>
  <td><%= contest.end_time %></td>
  <td>
    <%=
      if Time.now < contest.start_time
        '未开始'
      elsif Time.now > contest.end_time
        '已结束'
      else
        '<span class="red">进行中</span>'
      end.html_safe 
    %>
  </td>
  <td>
    <%= link_to('查看', :action => 'ranklist', :id => contest) if Time.now >= contest.start_time %>
  </td>
</tr>
